@model CafeDaManha.Models.CadastroCafe

@{
    ViewData["Title"] = "Deletar";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Cadastro Café</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alimento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <div>
            <a style="margin-top:15px" class="btn btn-outline-dark" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
